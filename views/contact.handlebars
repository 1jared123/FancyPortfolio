<div class="container-fluid">

	<div class="row">
		<div class="col-md-12">
			
			<form class="form-horizontal">

				<div class="form-group">
				    <label for="name">Your Name</label>
				    <input type="text" class="form-control" id="name" style="width: 100%;" placeholder="Steve Jobs">
				</div>

		  		<div class="form-group">
			    	<label for="email">Email</label>
			    	<input type="email" class="form-control" id="email" style="width: 100%;" placeholder="rottingapples@gmail.com">
		  		</div>

		  		<div class="form-group">
			    	<label for="message">Message</label>
			    	<input type="text" class="form-control" id="message" style="width: 100%;" placeholder="You rock! We want to employ you for a two million dollar contract!">
		  		</div>

		  		<form method="POST" action="/contact?_method=PUT">
                    <input type="hidden" name="contact-info" value="true">
                    <button class="btn-primary" type="submit">Submit Info <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span></button>
                </form>
				
			</form>

		</div>
	</div>
	
	{{#if contacts}}
		{{#each contacts}}
			<h1 class="con-header">All contacts sent</h1>
			<div class="container all-contacts-page">  
				<div class="contacts-table">
					<table class="table table-condensed table-hover table-bordered">
						<thead>
							<tr>
								<th>Name</th>
								<th>Email</th>
								<th>Message</th>
							</tr>
						</thead>
						{{#each contact}}
						<tbody>
							<tr>
								<td>{{this.name}}</td>
								<td>{{this.email}}</td>
								<td>{{this.message}}</td>
							</tr>
						</tbody>
						{{/each}}
					</table>
				</div>
			</div>
		{{/each}}
		{{else}}
		
		<h1>No One to connect with.... :(</h1>

	{{/if}}

</div>




