<div class="container">

	<div class="row">
		<div class="col-md-10">
			
			<form class="form-horizontal">

				<div class="form-group">
				    <label for="name">Your Name</label>
				    <input type="text" class="form-control" id="name" placeholder="Steve Jobs">
				</div>

		  		<div class="form-group">
			    	<label for="email">Email</label>
			    	<input type="email" class="form-control" id="email" placeholder="rottingapples@gmail.com">
		  		</div>

		  		<div class="form-group">
			    	<label for="message">Message</label>
			    	<input type="text" class="form-control" id="message" placeholder="You rock! We want to employ you for a two million dollar contract!">
		  		</div>

		  		<button type="submit" class="btn btn-default">Submit</button>
				
			</form>

		</div>
	</div>
	
	{{#if contacts}}
		{{#each contacts}}
			<h1 class="con-header">All contacts sent</h1>
			<div class="container all-contacts-page">  
				<div class="contacts-table">
					<table class="table table-condensed table-hover table-bordered">
						<thead>
							<tr>
								<th>Name</th>
								<th>Email</th>
								<th>Message</th>
							</tr>
						</thead>
						{{#each contact}}
						<tbody>
							<tr>
								<td>{{this.name}}</td>
								<td>{{this.email}}</td>
								<td>{{this.message}}</td>
							</tr>
						</tbody>
						{{/each}}
					</table>
				</div>
			</div>
		{{/each}}
		{{else}}
		
		<h1>No One to connect with.... :(</h1>

	{{/if}}

</div>




